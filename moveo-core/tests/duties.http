###

# Create a new duty
POST http://localhost:3000/api/duties
Content-Type: application/json
Authorization: Bearer YOUR_TOKEN_HERE

{
  "date": "2024-01-15T00:00:00Z",
  "startTime": "2024-01-15T08:00:00Z",
  "endTime": "2024-01-15T09:00:00Z",
  "scheduleId": "1",
  "dutyType": "TRIP"
}

###

# Update a duty
PUT http://localhost:3000/api/duties/1
Content-Type: application/json
Authorization: Bearer YOUR_TOKEN_HERE

{
  "driverId": "1",
  "vehicleId": "1"
}

###

# Delete a duty
DELETE http://localhost:3000/api/duties/1
Authorization: Bearer YOUR_TOKEN_HERE

###

# Create bulk trip duties (from trip generation)
POST http://localhost:3000/api/duties/bulk-trips
Content-Type: application/json
Authorization: Bearer YOUR_TOKEN_HERE

{
  "scheduleId": "1",
  "routeId": "1",
  "date": "2024-01-15",
  "trips": [
    {
      "scheduledStartTime": "08:00",
      "scheduledEndTime": "09:00"
    },
    {
      "scheduledStartTime": "09:30",
      "scheduledEndTime": "10:30"
    },
    {
      "scheduledStartTime": "11:00",
      "scheduledEndTime": "12:00"
    }
  ]
}